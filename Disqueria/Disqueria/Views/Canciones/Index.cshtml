@model IEnumerable<Disqueria.Models.Cancion>

@{
    ViewData["Title"] = "Index";
}

<h2>Canciones</h2>

<p>
    <a asp-action="Create">Nueva</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duracion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duracion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CancionID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CancionID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CancionID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
