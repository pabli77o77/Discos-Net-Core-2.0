@model IEnumerable<Disqueria.ViewModel.DiscoVM>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artista)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArtistaID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GeneroID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discografica)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiscograficaID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artista)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArtistaID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GeneroID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discografica)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiscograficaID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DiscoID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DiscoID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DiscoID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
